{
  "compilerOptions": {
    "target": "ES2024", // Set the target to ES2020 or a newer version
    "module": "ESNext", // Use ES Modules
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Output directory for compiled JS files
    "rootDir": "./src", // Root directory for your TypeScript files
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts" // Include TypeScript files in the 'src' directory
  ],
  "exclude": ["node_modules"]
}
